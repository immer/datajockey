QPushButton {
	border-width: 0px;
	border-style: none;
	margin: 0 0 0 0;
	padding: 0px;
	min-width: 24px;
	min-height: 24px;
	background-color: #131313;
}

QPushButton::pressed {
	border: 1px solid white;
	border-radius: 3px;
	/*background: #aa1717; */
	color: black;
	margin: 0 0 0 0;
	padding: 0px;
}

QPushButton::pressed, QPushButton::checked
{
	border-width: 0px;
	border-style: none;
	margin: 0 0 0 0;
	padding: 0px;
}

/*
QPushButton[dj_name="load"],
   QPushButton[dj_name="reset"],
   QPushButton[dj_name="cue"],
   QPushButton[dj_name="sync"],
   QPushButton[dj_name="pause"],
   QPushButton[dj_name="seek_back"],
   QPushButton[dj_name="seek_forward"]
   */

QPushButton[dj_name="seek_forward"] { image: url(:icons/seekfwd.png); }
QPushButton[dj_name="seek_forward"]::pressed { image: url(:icons/seekfwd_off.png); }

QPushButton[dj_name="seek_back"] { image: url(:icons/seekbkd.png); }
QPushButton[dj_name="seek_back"]::pressed { image: url(:icons/seekbkd_off.png); }

QPushButton[dj_name="load"] { image: url(:icons/load.png); } 
QPushButton[dj_name="load"]::pressed { image: url(:icons/load_off.png); }

QPushButton[dj_name="reset"] { image: url(:icons/reset.png); } 
QPushButton[dj_name="reset"]::pressed { image: url(:icons/reset_off.png); }

QPushButton[dj_name="cue"] { image: url(:icons/cue_off.png); }
QPushButton[dj_name="cue"]::checked { image: url(:icons/cue.png); }

QPushButton[dj_name="sync"] { image: url(:icons/sync_off.png); }
QPushButton[dj_name="sync"]::checked { image: url(:icons/sync.png); }

QPushButton[dj_name="pause"] { image: url(:icons/play.png); }
QPushButton[dj_name="pause"]::checked { image: url(:icons/pause.png); }

QPushButton[dj_name="mute"] { image: url(:icons/mute.png); } 
QPushButton[dj_name="mute"]::checked { image: url(:icons/mute_off.png); }

